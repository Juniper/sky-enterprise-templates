<!-- ###### SkyE-US ZTP template with Mist gateway variables ####### -->
<!-- ###### Create your Mist gateway device first to get the necessary variables ####### -->


<device xmlns="http://juniper.net/zerotouch-bootstrap-server">
    <unique-id>{{ serial }}</unique-id>
    <configuration>
        <config>
            <configuration>
                <security delete="delete"/>
                <interfaces delete="delete"/>
                <protocols delete="delete"/>
                <access delete="delete"/>
                <vlans delete="delete"/>
                <system>
                    <autoinstallation delete="delete"/>
                    <host-name>{{ hostname }}</host-name>
                    <ports>
                        <console>
                            <log-out-on-disconnect/>
                        </console>
                    </ports>
                    <root-authentication>
                        <encrypted-password>$6$vhTDT$bOpl9bBq5MKKWC1jY7siczd4fEMf4/xjUy.JvqXE9ZOsI.E5xdwquwEAVkKW.Xap101hBhKqcOwAscH/g8pzI1</encrypted-password>
                    </root-authentication>
                    <name-server>
                        <name>8.8.8.8</name>
                    </name-server>
                    <name-server>
                        <name>1.1.1.1</name>
                    </name-server> 
                    <login>
                        <announcement>Sky Enterprise US EZ-ZTP Template with DHCP\n\n</announcement>
                        <user>
                            <name>{{ ztp_username }}</name>
                            <class>super-user</class>
                            <authentication>
                                <encrypted-password>{{ ztp_password }}</encrypted-password>
                            </authentication>
                        </user>
                    <user>
                        <name>mist</name>
                        <full-name>mist</full-name>
                        <uid>2001</uid>
                        <class>super-user</class>
                        <authentication>
                            <encrypted-password>{{mist_user_password}}</encrypted-password>
                        </authentication>
                    </user>
                    </login>
                    <services>
                        <dhcp-local-server delete="delete"/>
                        <dhcp-local-server>
                            <group>
                                <name>dhcp-group</name>
                                <interface>
                                    <name>irb.0</name>
                                </interface>
                            </group>
                        </dhcp-local-server>
                        <ssh>
                            <protocol-version>v2</protocol-version>
                        </ssh>
                        <netconf>
                            <ssh>
                            </ssh>
                        </netconf>
                        <outbound-ssh>
                            <client>
                                <name>skyenterprise-ncd01</name>
                                <device-id>{{ ztp_host_id }}</device-id>
                                <secret>{{ ztp_secret }}</secret>
                                <keep-alive>
                                    <retry>3</retry>
                                    <timeout>5</timeout>
                                </keep-alive>
                                <services>netconf</services>
                                <servers>
                                    <name>skyent-ncd01.juniper.net</name>
                                    <port>4087</port>
                                    <retry>1000</retry>
                                    <timeout>60</timeout>
                                </servers>
                            </client>
                            <client>
                                <name>skyenterprise-ncd02</name>
                                <device-id>{{ ztp_host_id }}</device-id>
                                <secret>{{ ztp_secret }}</secret>
                                <keep-alive>
                                    <retry>3</retry>
                                    <timeout>5</timeout>
                                </keep-alive>
                                <services>netconf</services>
                                <servers>
                                    <name>skyent-ncd02.juniper.net</name>
                                    <port>4087</port>
                                    <retry>1000</retry>
                                    <timeout>60</timeout>
                                </servers>
                            </client>
                            <client>
                                <name>mist</name>
                                <device-id>{{mist_device_id}}</device-id>
                                <secret>{{mist_secret}}</secret>
                                <keep-alive>
                                    <retry>3</retry>
                                    <timeout>5</timeout>
                                </keep-alive>
                                <services>netconf</services>
                                <servers>
                                    <name>oc-term.mistsys.net</name>
                                    <port>2200</port>
                                    <retry>1000</retry>
                                    <timeout>60</timeout>
                                </servers>
                            </client>
                        </outbound-ssh>
                    </services>
                    <syslog>
                        <archive>
                            <size>5m</size>
                            <files>3</files>
                            <world-readable/>
                        </archive>
                        <user>
                            <name>*</name>
                            <contents>
                                <name>any</name>
                                <emergency/>
                            </contents>
                        </user>
                        <file>
                            <name>messages</name>
                            <contents>
                                <name>any</name>
                                <any/>
                            </contents>
                            <contents>
                                <name>authorization</name>
                                <info/>
                            </contents>
                            <contents>
                                <name>kernel</name>
                                <notice/>
                            </contents>
                            <explicit-priority/>
                        </file>
                        <file>
                            <name>interactive-commands</name>
                            <contents>
                                <name>interactive-commands</name>
                                <any/>
                            </contents>
                        </file>
                        <time-format>
                            <year/>
                        </time-format>
                    </syslog>
                    <max-configurations-on-flash>49</max-configurations-on-flash>
                    <max-configuration-rollbacks>49</max-configuration-rollbacks>
                    <ntp>
                        <server>
                            <name>pool.ntp.org</name>
                        </server>
                    </ntp>
                </system>
                <security>
                    <log>
                        <mode>stream</mode>
                        <report>
                        </report>
                    </log>
                    <screen>
                        <ids-option>
                            <name>untrust-screen</name>
                            <icmp>
                                <ping-death/>
                            </icmp>
                            <ip>
                                <source-route-option/>
                                <tear-drop/>
                            </ip>
                            <tcp>
                                <syn-flood>
                                    <alarm-threshold>1024</alarm-threshold>
                                    <attack-threshold>200</attack-threshold>
                                    <source-threshold>1024</source-threshold>
                                    <destination-threshold>2048</destination-threshold>
                                    <timeout>20</timeout>
                                </syn-flood>
                                <land/>
                            </tcp>
                        </ids-option>
                    </screen>
                    <nat>
                        <source>
                            <rule-set>
                                <name>trust-to-untrust</name>
                                <from>
                                    <zone>trust</zone>
                                </from>
                                <to>
                                    <zone>untrust</zone>
                                </to>
                                <rule>
                                    <name>source-nat-rule</name>
                                    <src-nat-rule-match>
                                        <source-address>0.0.0.0/0</source-address>
                                    </src-nat-rule-match>
                                    <then>
                                        <source-nat>
                                            <interface>
                                            </interface>
                                        </source-nat>
                                    </then>
                                </rule>
                            </rule-set>
                        </source>
                    </nat>
                    <forwarding-process>
                        <enhanced-services-mode/>
                    </forwarding-process>
                    <policies>
                        <policy>
                            <from-zone-name>trust</from-zone-name>
                            <to-zone-name>trust</to-zone-name>
                            <policy>
                                <name>trust-to-trust</name>
                                <match>
                                    <source-address>any</source-address>
                                    <destination-address>any</destination-address>
                                    <application>any</application>
                                </match>
                                <then>
                                    <permit>
                                    </permit>
                                </then>
                            </policy>
                        </policy>
                        <policy>
                            <from-zone-name>trust</from-zone-name>
                            <to-zone-name>untrust</to-zone-name>
                            <policy>
                                <name>trust-to-untrust</name>
                                <match>
                                    <source-address>any</source-address>
                                    <destination-address>any</destination-address>
                                    <application>any</application>
                                </match>
                                <then>
                                    <permit>
                                    </permit>
                                    <log>
                                        <session-init/>
                                        <session-close/>
                                    </log>
                                </then>
                            </policy>
                        </policy>
                    </policies>
                    <zones>
                        <security-zone>
                            <name>trust</name>
                            <tcp-rst/>
                            <host-inbound-traffic>
                                <system-services>
                                    <name>all</name>
                                </system-services>
                                <protocols>
                                    <name>all</name>
                                </protocols>
                            </host-inbound-traffic>
                            <interfaces>
                                <name>irb.0</name>
                            </interfaces>
                        </security-zone>
                        <security-zone>
                            <name>untrust</name>
                            <tcp-rst/>
                            <screen>untrust-screen</screen>
                            <interfaces>
                                <name>ge-0/0/0.0</name>
                                <host-inbound-traffic>
                                    <system-services>
                                        <name>dhcp</name>
                                    </system-services>
                                </host-inbound-traffic>
                            </interfaces>
                        </security-zone>
                    </zones>
                </security>
                <interfaces>
                    <interface>
                        <name>ge-0/0/0</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <inet>
                                    <dhcp-client>
                                    </dhcp-client>
                                </inet>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/1</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/2</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/3</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/4</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/5</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/6</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <ethernet-switching>
                                    <vlan>
                                        <members>vlan-trust</members>
                                    </vlan>
                                </ethernet-switching>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>ge-0/0/7</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <inet>
                                </inet>
                            </family>
                        </unit>
                    </interface>
                    <interface>
                        <name>irb</name>
                        <unit>
                            <name>0</name>
                            <family>
                                <inet>
                                    <address>
                                        <name>192.168.50.1/24</name>
                                    </address>
                                </inet>
                            </family>
                        </unit>
                    </interface>
                </interfaces>
                <protocols>
                    <l2-learning>
                        <global-mode>switching</global-mode>
                    </l2-learning>
                    <lldp>
                        <interface>
                            <name>all</name>
                        </interface>
                    </lldp>
                    <rstp>
                        <interface>
                            <name>all</name>
                        </interface>
                    </rstp>
                </protocols>
                <access>
                    <address-assignment>
                        <pool>
                            <name>junosDHCPPool</name>
                            <family>
                                <inet>
                                    <network>192.168.50.0/24</network>
                                    <range>
                                        <name>junosRange</name>
                                        <low>192.168.50.2</low>
                                        <high>192.168.50.254</high>
                                    </range>
                                    <dhcp-attributes>
                                        <router>
                                            <name>192.168.50.1</name>
                                        </router>
                                        <propagate-settings>ge-0/0/0.0</propagate-settings>
                                    </dhcp-attributes>
                                </inet>
                            </family>
                        </pool>
                    </address-assignment>
                </access>
                <vlans>
                    <vlan>
                        <name>vlan-trust</name>
                        <vlan-id>3</vlan-id>
                        <l3-interface>irb.0</l3-interface>
                    </vlan>
                </vlans>
            </configuration>
        </config>
    </configuration>
</device>
